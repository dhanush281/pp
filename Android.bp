    name: "symlink_wlan_cfg_adrastea",
    installed_location: "firmware/wlan/qca_cld/adrastea/WCNSS_qcom_cfg.ini",
    symlink_target: "/vendor/etc/wifi/adrastea/WCNSS_qcom_cfg.ini",
    vendor: true,
}