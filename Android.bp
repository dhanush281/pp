    name: "symlink_wlan_fw_adrastea",
    installed_location: "firmware/wlan/qca_cld/adrastea/wlan_mac.bin",
    symlink_target: "/mnt/vendor/persist/adrastea/wlan_mac.bin",
    vendor: true,
}
